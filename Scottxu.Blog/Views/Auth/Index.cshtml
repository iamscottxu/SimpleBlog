@{
    ViewBag.Title = "后台登录 - Simple Blog";
}

@section Head {
    <link rel="icon" type="image/png" blog-href="assets/admin/i/favicon.png">
    <link rel="apple-touch-icon-precomposed" blog-href="assets/admin/i/app-icon72x72@2x.png">
    <meta name="apple-mobile-web-app-title" content="Simple Blog">
    <link rel="stylesheet" blog-href="assets/admin/css/amazeui.min.css">
    <link rel="stylesheet" blog-href="assets/admin/css/admin.css">
    <link rel="stylesheet" blog-href="assets/admin/css/app.css">
    <script blog-src="assets/admin/js/jquery.min.js"></script>
    <script blog-src="assets/admin/js/amazeui.min.js"></script>
    <script blog-src="lib/js-md5/build/md5.min.js"></script>
    <script blog-src="assets/auth/js/index.js"></script>
    @await Component.InvokeAsync("CaptchaHead", new {action = "admin_login"})
}

<div class="am-g myapp-login">
    <div class="myapp-login-logo-block  tpl-login-max">
        <div class="myapp-login-logo-text">
            <div class="myapp-login-logo-text">
                Simple Blog<span> Login</span> <i class="am-icon-skyatlas"></i>

            </div>
        </div>

        <div class="login-font">
            <!--<i>Log In </i> or <span> Sign Up</span>-->
            <span id="message"></span>
        </div>
        <div class="am-u-sm-10 login-am-center">
            <form class="am-form">
                <fieldset>
                    <div class="am-form-group login-am-center-first">
                        <input type="email" required class="" placeholder="电子邮箱地址" id="email">
                    </div>
                    <div class="am-form-group login-am-center-last">
                        <input type="password" minlength="8" maxlength="20" required class="" placeholder="密码" id="password">
                    </div>
                    <p></p>
                    <div class="am-form-group">
                        @await Component.InvokeAsync("CaptchaDiv")
                    </div>
                    <p>
                        <button type="submit" class="am-btn am-btn-default" data-am-loading="{spinner: 'circle-o-notch', loadingText: '正在登录……'}" id="btn_Login">登录</button>
                    </p>
                </fieldset>
            </form>
        </div>
    </div>
</div>
<script blog-src="assets/admin/js/app.js"></script>